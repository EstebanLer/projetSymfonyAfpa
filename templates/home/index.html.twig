{% extends 'base.html.twig' %}

{% block title %}List of articles{% endblock %}

{% block body %}

    <br>
    <br>

    <table class="table table-dark">
        <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Name</th>
            <th scope="col">Reference</th>
            <th scope="col">Price</th>
            <th scope="col">Quantity in stock</th>
        </tr>
        </thead>
        <tbody>
    {% for article in articles %}
        <tr class="table-dark">
            <td>{{ article.id }}</td>
            <td>{{ article.name }}</td>
            <td>{{ article.reference }}</td>
            <td>{{ article.price }}</td>
            <td>{{ article.stock.quantity }}</td>
            <td><a type="button" class="btn btn-outline-success" href="{{ path('article_edit', {'reference': article.reference}) }}" >Modify</a></td>
            <td><a type="button" class="btn btn-outline-danger" href="{{ path('article_delete', {'reference': article.reference}) }}">Delete</a></td>
        </tr>
    {% endfor %}
        </tbody>
    </table>



{% endblock %}
